<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Suppliers - Inventory MS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>

<div class="d-flex">
    <%- include('partials/sidebar') %>

    <div class="container-fluid p-4">
        <h2 class="mb-4">Supplier Directory</h2>

        <div class="row g-4"> 
            <% if (suppliers.length > 0) { %>
                <% suppliers.forEach(sup => { %>
                    <!-- Large Card for Each Supplier -->
                    <div class="col-md-6 col-lg-4">
                        <div class="card shadow-sm h-100 border-0">
                            <!-- Logo Section -->
                            <div class="card-header bg-white text-center py-4">
                                <img src="<%= sup.logo ? sup.logo : '/noImg.jpeg' %>" 
                                     alt="Logo" 
                                     class="img-fluid" 
                                     style="max-height: 100px; max-width: 150px; object-fit: contain;">
                            </div>
                            
                            <!-- Details Section -->
                            <div class="card-body">
                                <h4 class="card-title text-primary"><%= sup.name %></h4>
                                <hr>
                                <p class="card-text mb-2"><i class="fas fa-envelope text-muted me-2"></i> <%= sup.email %></p>
                                <p class="card-text mb-2"><i class="fas fa-phone text-muted me-2"></i> <%= sup.phone %></p>
                                <p class="card-text mb-3"><i class="fas fa-map-marker-alt text-muted me-2"></i> <%= sup.address %></p>
                            </div>

                            <!-- Actions Footer -->
                            <div class="card-footer bg-light text-center">
                                <a href="<%= sup.website %>" target="_blank" class="btn btn-primary w-100">
                                    <i class="fas fa-globe"></i> Visit Website
                                </a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-12 text-center text-muted mt-5">
                    <h4>No suppliers found.</h4>
                </div>
            <% } %>
        </div>
    </div>
</div>

</body>
</html>