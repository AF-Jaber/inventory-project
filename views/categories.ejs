<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Categories - Inventory A+</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>

<div class="d-flex">
    <%- include('partials/sidebar') %>

    <div class="container-fluid p-4">
        <h2>Manage Categories</h2>
        <div class="row mt-4">
            
            <!-- List of Categories -->
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        Existing Categories
                    </div>
                    <ul class="list-group list-group-flush">
                        <% if (categories.length > 0) { %>
                            <% categories.forEach(cat => { %>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <%= cat.name %>
                                    
                                    <!-- Delete Button -->
                                    <form action="/categories/delete/<%= cat._id %>" method="POST" onsubmit="return confirm('Delete <%= cat.name %>?')">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </li>
                            <% }) %>
                        <% } else { %>
                            <li class="list-group-item text-muted">No categories yet.</li>
                        <% } %>
                    </ul>
                </div>
            </div>

            <!-- Add New Category Form -->
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-success text-white">
                        Add New
                    </div>
                    <div class="card-body">
                        <form action="/categories/add" method="POST">
                            <div class="mb-3">
                                <label class="form-label">Category Name</label>
                                <input type="text" name="name" class="form-control" placeholder="e.g. Furniture" required>
                            </div>
                            <button type="submit" class="btn btn-success w-100">
                                <i class="fas fa-plus"></i> Add Category
                            </button>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

</body>
</html>